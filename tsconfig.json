{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["./source/ts/**/*.ts"],
  "exclude": ["node_modules"]
}
